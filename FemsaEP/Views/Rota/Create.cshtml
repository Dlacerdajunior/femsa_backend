@model FemsaEP.Models.rota

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAjax.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formadicionarrota" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
        <script>

        jQuery(function ($) {
            $('#codigo').mask('00000000');
        });

    </script>

    <script>
        $(function () {
            // your code goes here
            $("#btadicionarrota").click(function () {
                codigo = $("#codigo").val()
                descricao = $("#descricao").val()
                colaborador = $("#id_colaborador").val()
                if (codigo == "" || descricao == "" || colaborador == "") {
                    alert("É necessário preencher os campos abaixo");
                    return false;
                }
                else {
                    $("#formadicionarrota").submit();
                }

            });
        });
    </script>

    <div class="form-group">
        @Html.LabelFor(model => model.codigo, "Código", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.codigo, new { @class = "form-control", placeholder = "Código" })
            @Html.ValidationMessageFor(model => model.codigo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.descricao, "Descrição", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.descricao, new { @class = "form-control", placeholder = "Descrição" })
            @Html.ValidationMessageFor(model => model.descricao)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.id_colaborador, "Colaborador", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.DropDownList("id_colaborador", String.Empty)
            @Html.ValidationMessageFor(model => model.id_colaborador)
        </div>
    </div>

}

