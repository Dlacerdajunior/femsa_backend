@model FemsaEP.Models.chat_mensagem

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAjax.cshtml";
}

@using (Html.BeginForm("CreateInsert", null, FormMethod.Get, new { id = "formadicionarchat" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

    <script>

        jQuery(function ($) {
            $('#mensagem_id').mask('00000000');
        });

    </script>
    
         <input type="hidden" name="id_enquete" value="@Request.Params["idmesagem"]" />

    
    <script>
        $(function () {
            // your code goes here
            $("#bteditarchat").click(function () {
                texto = $("#texto").val()
                mensagem_id = $("#mensagem_id").val()
                if (texto == "" && mensagem_id == "") {
                    alert("É necessário preencher os campos abaixo");
                    return false;
                }
                else {
                    $("#formeditarchat").submit();
                }

            });
        });

    </script>
    <div class="form-group">
        @Html.LabelFor(model => model.texto, "Texto", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.texto, new { @class = "form-control", placeholder = "Texto" })
            @Html.ValidationMessageFor(model => model.texto)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.mensagem_id, "Mensagem ID", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("mensagem_id", String.Empty)
            @Html.ValidationMessageFor(model => model.mensagem_id)
        </div>
     <!-- @Html.LabelFor(model => model.hora, "Hora", new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.hora, new { @class = "form-control", placeholder = "Hora" })
            @Html.ValidationMessageFor(model => model.hora)
        </div> -->   
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.usuario_id, "Usuario", new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.DropDownList("usuario_id", String.Empty)
            @Html.ValidationMessageFor(model => model.usuario_id)
        </div>
        @Html.LabelFor(model => model.remetente_id, "Remetente", new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.DropDownList("remetente_id", String.Empty)
            @Html.ValidationMessageFor(model => model.remetente_id)
        </div>
    </div>
}
