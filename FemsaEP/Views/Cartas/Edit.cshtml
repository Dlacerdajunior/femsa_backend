        <label class="col-md-2 control-label">Upload PDF</label>
        <div class="col-md-4">
            <div class="file">
                @Html.TextBox("file", "", new { type = "file", @class = "form-control" })
            </div>
        </div>
        @Html.LabelFor(model => model.ano_contrapartida, "Ano Contrapartida", new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.ano_contrapartida, new { @class = "form-control", placeholder = "Ano Contrapartida" })
            @Html.ValidationMessageFor(model => model.ano_contrapartida)
