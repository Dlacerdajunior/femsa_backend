@model PagedList.IPagedList<FemsaEP.Models.motivo_de_manutencao>
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Content/assets/vendor/jquery/jquery.js")"></script>

<script>
    $(function () {
        // your code goes here

        $(".btadicionarmotivo_de_manutencao").click(function () {

            $("#modaladicionarmotivo_de_manutencao").load($(this).attr('href'));

            $("#modaladicionarmotivo_de_manutencaolink").trigger("click");

            return false;

        });

        $(".bteditarmotivo_de_manutencao").click(function () {

            $("#modaleditarmotivo_de_manutencao").load($(this).attr('href'));

            $("#modaleditarmotivo_de_manutencaolink").trigger("click");

            return false;

        });

        $(".btdeletarmotivo_de_manutencaolink").click(function () {

            $("#modaldeletarmotivo_de_manutencao").load($(this).attr('href'));

            $("#modaldeletarlink").trigger("click");

            return false;

        });


        $("#btdeletarmotivo_de_manutencao").click(function () {

            $("#formdeletarmotivo_de_manutencao").submit();

        });

    });

</script>

<header class="page-header">
    <h2>Motivos de Manutenção</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="motivo-manutencao.html">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li><span>Motivos de Manutenção</span></li>
        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"></a>
    </div>
</header>

<!-- start: page -->

<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    <a href="@Url.Content("~/MotivoManutencao/Create")" class="btadicionarmotivo_de_manutencao panel-action"><i class="fa fa-plus"></i></a>
                    <a href="#modalAnim" id="modaladicionarmotivo_de_manutencaolink" class="panel-action fa fa-plus modal-with-zoom-anim" style="display:none;"><i class="fa fa-plus"></i></a>
                </div>

                <h2 class="panel-title">Motivos de Manutenção</h2>
            </header>
            <div class="panel-body">
                <div class="table-responsive">

                    <table class="table mb-none">
                        <thead>
                            <tr>
                                <th width="10%">Código</th>
                                <th width="80%">Descrição</th>
                                <th width="10%">Ações</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td> @Html.DisplayFor(modelItem => item.codigo) </td>
                                    <td> @Html.DisplayFor(modelItem => item.descricao) </td>

                                    <td class="actions">

                                        <a href="@Url.Content("~/MotivoManutencao/edit/" + item.id)" class="bteditarmotivo_de_manutencao panel-action"><i class="fa fa-pencil"></i></a>

                                        <a href="#modalAdd" id="modaleditarmotivo_de_manutencaolink" class="panel-action modal-with-zoom-anim" style="display:none;"><i class="fa fa-pencil"></i></a>

                                        <a href="@Url.Content("~/MotivoManutencao/delete/" + item.id)" class="btdeletarmotivo_de_manutencaolink "><i class="fa fa-trash-o"></i></a>

                                        <a href="#modalRemover" id="modaldeletarlink" class="delete-row modal-with-zoom-anim" style="display:none;"><i class="fa fa-trash-o"></i></a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            Página @Model.PageNumber de @Model.PageCount
            @Html.PagedListPager(Model, Page => Url.Action("Index", new { pagina = Page }))
        </section>
    </div>
</div>

<!-- Modal atualizar -->
<div id="modalAdd" class="zoom-anim-dialog modal-block modal-block-primary mfp-hide">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Atualizar</h2>
        </header>
        <div class="panel-body" id="modaleditarmotivo_de_manutencao">

            <!-- conteudo aqui -->
        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-success modal-atualizar" id="bteditarmotivo_de_manutencao">Atualizar</button>
                    <button class="btn btn-default modal-dismiss">Cancelar</button>
                </div>
            </div>
        </footer>
    </section>
</div>

<!-- Modal Adicionar -->
<div id="modalAnim" class="zoom-anim-dialog modal-block modal-block-primary mfp-hide">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Adicionar</h2>
        </header>
        <div class="panel-body" id="modaladicionarmotivo_de_manutencao">
            <!-- conteudo aqui -->
        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-success modal-confirm" id=btadicionarmotivo_de_manutencao>Adicionar</button>
                    <button class="btn btn-default modal-dismiss">Cancelar</button>
                </div>
            </div>
        </footer>
    </section>
</div>

<!-- Modal Remover -->
<div id="modalRemover" class="zoom-anim-dialog modal-block modal-block-danger mfp-hide">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Deletar</h2>
        </header>
        <div class="panel-body" id=modaldeletarmotivo_de_manutencao>

        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-danger modal-delete" id="btdeletarmotivo_de_manutencao">Confirmar</button>
                    <button class="btn btn-default modal-dismiss">Cancelar</button>
                </div>
            </div>
        </footer>
    </section>
</div>