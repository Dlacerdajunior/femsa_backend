@model PagedList.IPagedList<FemsaEP.Models.grupo_SAP>
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Content/assets/vendor/jquery/jquery.js")"></script>

<script>
    $(function () {
        // your code goes here

        $(".btadicionargrupo_de_usuario").click(function () {

            $("#modaladicionargrupo_de_usuario").load($(this).attr('href'));

            $("#modaladicionargrupo_de_usuariolink").trigger("click");

            return false;

        });

        $(".bteditargrupo_de_usuario").click(function () {

            $("#modaleditargrupo_de_usuario").load($(this).attr('href'));

            $("#modaleditargrupo_de_usuariolink").trigger("click");

            return false;

        });

        $(".btdeletargrupo_de_usuariolink").click(function () {

            $("#modaldeletargrupo_de_usuario").load($(this).attr('href'));

            $("#modaldeletarlink").trigger("click");

            return false;

        });


        $("#btdeletargrupo_de_usuario").click(function () {

            $("#formdeletargrupo_de_usuario").submit();

        });

    });

</script>

<header class="page-header">
    <h2>Função de Usuários</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="grupo-usuarios.html">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li><span>Função de Usuários</span></li>
        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"></a>
    </div>
</header>

<!-- start: page -->

<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    <a href="@Url.Content("~/GrupoUsuarios/Create")" class="btadicionargrupo_de_usuario panel-action"><i class="fa fa-plus"></i></a>
                    <a href="#modalAnim" id="modaladicionargrupo_de_usuariolink" class="panel-action fa fa-plus modal-with-zoom-anim" style="display:none;"><i class="fa fa-plus"></i></a>
                </div>

                <h2 class="panel-title">Função de Usuários</h2>
            </header>
            <div class="panel-body">
                <div class="table-responsive">

                    <table class="table mb-none">
                        <thead>
                            <tr>
                                <th width="20%">Código</th>
                                <th width="70%">Nome</th>
                                <th width="10%">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ZCODGRUPO).ToString().Replace(",00", "")</td>
                                    <td>@Html.DisplayFor(modelItem => item.ZNOMGRUPO)</td>

                                    <td class="actions">

                                        <a href="@Url.Content("~/GrupoUsuarios/edit/"+item.ZCODGRUPO)" class="bteditargrupo_de_usuario panel-action"><i class="fa fa-pencil"></i></a>

                                        <a href="#modalAdd" id="modaleditargrupo_de_usuariolink" class="panel-action modal-with-zoom-anim" style="display:none;"><i class="fa fa-pencil"></i></a>

                                        <a href="@Url.Content("~/GrupoUsuarios/delete/"+item.ZCODGRUPO)" class="btdeletargrupo_de_usuariolink "><i class="fa fa-trash-o"></i></a>

                                        <a href="#modalRemover" id="modaldeletarlink" class="delete-row modal-with-zoom-anim" style="display:none;"><i class="fa fa-trash-o"></i></a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            Página @Model.PageNumber de @Model.PageCount
            @Html.PagedListPager(Model, Page => Url.Action("Index", new { pagina = Page }))
        </section>
    </div>
</div>

<!-- Modal atualizar -->
<div id="modalAdd" class="zoom-anim-dialog modal-block modal-block-primary mfp-hide">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Atualizar</h2>
        </header>
        <div class="panel-body" id="modaleditargrupo_de_usuario">

            <!-- conteudo aqui -->
        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-success modal-atualizar" id="bteditargrupo_de_usuario">Atualizar</button>
                    <button class="btn btn-default modal-dismiss">Cancelar</button>
                </div>
            </div>
        </footer>
    </section>
</div>

<!-- Modal Adicionar -->
<div id="modalAnim" class="zoom-anim-dialog modal-block modal-block-primary mfp-hide">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Adicionar</h2>
        </header>
        <div class="panel-body" id="modaladicionargrupo_de_usuario">
            <!-- conteudo aqui -->
        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-success modal-confirm" id=btadicionargrupo_de_usuario>Adicionar</button>
                    <button class="btn btn-default modal-dismiss">Cancelar</button>
                </div>
            </div>
        </footer>
    </section>
</div>

<!-- Modal Remover -->
<div id="modalRemover" class="zoom-anim-dialog modal-block modal-block-danger mfp-hide">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Deletar</h2>
        </header>
        <div class="panel-body" id=modaldeletargrupo_de_usuario>

        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-danger modal-delete" id="btdeletargrupo_de_usuario">Confirmar</button>
                    <button class="btn btn-default modal-dismiss">Cancelar</button>
                </div>
            </div>
        </footer>
    </section>
</div>