@model FemsaEP.Models.book_online

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAjax.cshtml";
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formadicionarbook-online" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

    <script>

        jQuery(function ($) {
            $('#codigo').mask('00000000');
        });

    </script>

    <script>
        $(function () {
            // your code goes here
            $("#btadicionarbook-online").click(function () {
                codigo = $("#codigo").val()
                titulo = $("#titulo").val()
                if (codigo == "" && titulo == "") {
                    alert("É necessário preencher os campos abaixo");
                    return false;
                }
                else {
                    $("#formadicionarbook-online").submit();
                }

            });
        });
    </script>

    <div class="form-group">
        @Html.LabelFor(model => model.codigo, "Código *", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.codigo, new { @class = "form-control", placeholder = "Código" })
            @Html.ValidationMessageFor(model => model.codigo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.titulo, "Título *", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.TextAreaFor(model => model.titulo, new{ @class = "form-control", placeholder = "Título"})
            @Html.ValidationMessageFor(model => model.titulo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.url_upload, "Enviar Foto", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.url_upload, new { @class = "form-control", placeholder = "Enviar Foto" })
            @Html.ValidationMessageFor(model => model.url_upload)
        </div>
    </div>
}

