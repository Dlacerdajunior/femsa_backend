@model FemsaEP.Models.ativacao
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAjax.cshtml";
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formeditarativacao" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.id)

    <script>

        jQuery(function ($) {
            $('#codigo').mask('00000000');
        });

    </script>

    <script>
        $(function () {
            // your code goes here
            $("#bteditarativacao").click(function () {
                codigo = $("#codigo").val()
                descricao = $("#descricao").val()
                if (codigo == "" || descricao == "") {
                    alert("É necessário preencher os campos abaixo");
                    return false;
                }
                else {
                    $("#formeditarativacao").submit();
                }

            });
        });
    </script>
    
    <div class="form-group">
        @Html.LabelFor(model => model.codigo, "Código", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.codigo, new { @class = "form-control", placeholder = "Código" })
            @Html.ValidationMessageFor(model => model.codigo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.descricao, "Descrição", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.descricao, new { @class = "form-control", placeholder = "Descrição" })
            @Html.ValidationMessageFor(model => model.descricao)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.custo_valor, "Custo Valor", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.custo_valor, new { @class = "form-control", placeholder = "Custo Valor" })
            @Html.ValidationMessageFor(model => model.custo_valor)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.id_cliente, "Cliente", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.DropDownList("id_cliente", String.Empty)
            @Html.ValidationMessageFor(model => model.id_cliente)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.status, "Status", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.DropDownList("status", String.Empty)
            @Html.ValidationMessageFor(model => model.status)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.id_projeto, "Projeto", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.DropDownList("id_projeto", String.Empty)
            @Html.ValidationMessageFor(model => model.id_projeto)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.situacao, "Situação", new { @class = "col-md-3 control-label" })
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.situacao, new { @class = "form-control", placeholder = "Situação" })
            @Html.ValidationMessageFor(model => model.situacao)
        </div>
    </div>
}